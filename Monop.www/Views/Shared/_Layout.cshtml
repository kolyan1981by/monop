@using Helpers
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>

    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-1" />
    <meta name='keywords' content='monopoly, game, online game' />
    <meta name='description' content='monopoly -  best online game , enjoy' />
    
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Game.css")" rel="stylesheet" type="text/css" />
    
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/jquery-ui.min.js")"></script>
    
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/base/jquery-ui.css">
    <script src="@Url.Content("~/Scripts/Site.js")" type="text/javascript"></script>
    
    @RenderSection("Head", required: false)
</head>
<body>
    @Html.Partial("Controls/ucTranslate")
    <div class="page">
        <div id="header">
            <div id="title">
                <h1>
                    Real Gold Monopoly</h1>
            </div>
            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
                @Html.Partial("CultureUserControl")
            </div>
            <div id="menucontainer">
                <ul id="menu">
                    @Html.Raw(Html.MenuItem("Home", "Index", "Home"))
                    @Html.Raw(Html.MenuItem("Game", "Play", "Game"))
                    @Html.Raw(Html.MenuItem("Simul", "Index", "Sim"))
                    @Html.Raw(Html.MenuItem("learn", "Index", "Learn"))
                    @*@Html.Raw(Html.MenuItem("Forum", "Index", "Forum"))*@
                 
                </ul>
            </div>
        </div>
        <div id="main">
            @RenderBody()
            <div id="footer">
                Monopoly Game &copy; Copyright 2013
            </div>
        </div>
    </div>
</body>
</html>
