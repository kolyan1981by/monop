@{
    ViewBag.Title = "Game";
}
@section Head
{
    <script src="@Url.Content("~/Scripts/Game/Game.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Game/PlayerCells.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/Game/PlayersInfo.js")" type="text/javascript"></script>
    <style type="text/css">
        #Button3
        {
            width: 101px;
            height: 39px;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {

            $("#chatMessage").keyup(function (event) {
                if (event.keyCode == 13) {
                    sendMessage();
                }
            });

        });
    </script>
}
<table style="width: 100%;">
    <tr>
        <td style="width: 65%;" valign="top">
            <div id="plstate" style="margin-bottom: 20px;">
            </div>
            @Html.Partial("_GameMap")
        </td>
        <td valign="top">
            <div>
                <table>
                    <tr>
                        <td>
                            @if ((bool)ViewData["admin"])
                            {
                                <text>
                                <input id="Button1" type="button" value="next step" onclick="next();" />
                                <input id="ButtonInitManTrades" type="button" value="ManTrades" onclick="action('InitManTrades');" />
                                @Html.ActionLink("store", "Store", "Game")
                                <input type="checkbox" value="true" name="speedUpd" id="speedUpd" onclick="chSpeedUpdate();" />2s
                                </text>
                            }
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input id="ButtonBot" type="button" value="Bot/Human" onclick="action('SetAsBot');" />
                            <input id="ButtonExit" type="button" value="leave game" onclick="action('exit');" />
                        </td>
                    </tr>
                </table>
            </div>
            <table style="width: 100%;">
                <tr>
                    <td>
                        <input id="btnRefresh" type="button" value="manage lands" />
                        <div style="display: none;" id="divPlayerCells" title="Trades">
                        </div>
                        <input id="ButtonShowTrades" type="button" value="show trades" />
                        <div style="display: none;" id="divTrades" title="Trades">
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>
                        <div id="PlayerCells" />
                    </td>
                </tr>
                <tr>
                    <td>
                        GAME CHAT:<br />
                        Message:
                        <input id="chatMessage" type="text" size="40" />
                        <div style="margin: 10px 0 10px 0;">
                            <span onclick="$('#smilesBox').toggle();"><a class="Clicable">Smiles</a></span>
                        </div>
                        @Html.Partial("Controls/SmilesPopup")
                        <input id="btSend" type="button" value="Send" onclick="sendMessage();" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <div id="log" />
                    </td>
                </tr>
            </table>
            <br />
        </td>
    </tr>
</table>
<br />
<script type="text/javascript">

     
 
</script>
